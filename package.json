{
  "name": "Cryo",
  "version": "1.0.1",
  "description": "Optimized Chromium browser experience",
  "author": "Steve Seguin",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "run-os",
    "build:win32": "electron-builder --win",
    "build:darwin": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "clean": "rimraf ./dist",
    "release": "electron-builder --publish always"
  },
  "build": {
    "appId": "Cryo",
    "productName": "Cryo",
    "files": [
      "**/*",
      "build/Release/*",
      "assets/icons/*.*",
      "assets/icons/mac/*.*",
      "assets/icons/png/*.*",
      "assets/icons/win/*.*"
    ],
    "mac": {
      "category": "public.build.automation",
      "icon": "assets/icons/mac/icon.ico",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.inherit.plist",
	  "extendInfo": {
        "NSCameraUsageDescription": "This app requires camera access to record video.",
        "NSMicrophoneUsageDescription": "This app requires microphone access to record audio."
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "cyro-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable"
        }
      ],
      "icon": "assets/icons/win/icon.ico"
    },
    "linux": {
      "category": "public.build.automation",
      "icon": "assets/icons/png/256x256.png",
      "target": "AppImage"
    },
    "nsis": {
      "runAfterFinish": true,
      "installerIcon": "assets/icons/win/icon.ico",
      "artifactName": "s10watch-${version}.${ext}"
    },
    "portable": {
      "artifactName": "cryo.exe"
    },
    "appx": {
      "applicationId": "Cryo",
      "backgroundColor": "#464646",
      "identityName": "Cryo",
      "publisherDisplayName": "Steve Seguin",
      "artifactName": "Cryo-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "afterSign": "./afterSign.js"
  },
  "devDependencies": {
    "electron": "^10.1.3",
    "electron-builder": "^22.8.0",
    "electron-notarize": "^1.0.0",
    "rimraf": "^2.6.3",
    "run-script-os-fix": "^1.0.4"
  },
  "dependencies": {
    "electron-context-menu": "^2.3.0",
    "electron-is-dev": "^1.0.1",
    "webcamjs": "^1.0.26",
    "yargs": "^15.4.1"
  }
}
